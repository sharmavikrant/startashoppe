<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>sample template</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<!--[if ie]><meta content='IE=8' http-equiv='X-UA-Compatible'/><![endif]-->
		<!-- bootstrap -->
		<link href="/theme10/bootstrap/css/bootstrap.min.css" rel="stylesheet">      
		<link href="/theme10/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">		
		<link href="/theme10/themes/css/bootstrappage.css" rel="stylesheet"/>
		<link href='http://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700' rel='stylesheet' type='text/css'>
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
		<!-- global styles -->
		<link href="/theme10/themes/css/flexslider.css" rel="stylesheet"/>
		<link href="/theme10/themes/css/main.css" rel="stylesheet"/>

		<!-- scripts -->
		<script src="/theme10/themes/js/jquery-1.7.2.min.js"></script>
		<script src="/theme10/bootstrap/js/bootstrap.min.js"></script>				
		<script src="/theme10/themes/js/superfish.js"></script>	
		<script src="/theme10/themes/js/jquery.scrolltotop.js"></script>
		<!--[if lt IE 9]>			
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
			<script src="js/respond.min.js"></script>
		<![endif]-->
	</head>
    <body>	
					<%= render :partial => 'header10' %>
					<section class="main-content">
						<div class="shop-content">
							<div class="row">  
														
								<div class="span9">								
									<section class="products-shop">
										<h2 class="page-header"><span>Category Template with List Style</span></h2>	
										<div class="sidebar-line"><span></span></div>							
										<ul class="thumbnails">	
										
											<%@products.each do |i|%>
											<%@category.each do |c|%>
												<% if i["product_category_id"] == c["product_category_id"]%>
													<% @cat = c["product_category_name"]%>
												<%end%>
											<%end%>
											<%@sub_category.each do |s|%>
												<% if i["sub_category_id"] == s["sub_category_id"]%>
													<% @sub = s["sub_category_name"]%>
												<%end%>
											<%end%>
											<li class="span2">            
												<div class="item-product">
									<a href=/<%="#{i[:title].parameterize}/#{@cat.parameterize}/#{@sub.parameterize}/c_shop_10/#{i['product_id']}"%>>				<img src="<%="#{i['image_1']}thumb/#{i[:image_name_1]}"%>" class="prod_img" alt="" style="height: 170;">
</a><label class="title"><%=i[:title]%></label>
													<label class="price"><%= i['price']%></label>

													<label class="btn_buy"><a href=/<%="#{i[:title].parameterize}/#{@cat.parameterize}/#{@sub.parameterize}/c_shop_10/#{i['product_id']}"%>>BUY</a></label>
													<label class="prod_edit_label"><a onclick="editProduct(311)" class="edit-product">Edit</a></label>
													<label class="prod_del_label"><a onclick="deleteProduct(311)" class="del-product">Delete</a></label><div class="clear"></div>
													<label class="prod_view_label">
														<button class="btn btn-primary view_prod_info" type="button">View Details</button>
														<br>
													</label>
													<div class="clear"></div>
												</div>
												
													
											</li>
											<%end%>
										</ul>
								
									</section>				
								<hr>
								<div class="pagination pagination-small pagination-centered">
							<ul>
								<li><a href="#">Prev</a></li>
								<li class="active"><a href="#">1</a></li>
								<li><a href="#">2</a></li>
								<li><a href="#">3</a></li>
								<li><a href="#">4</a></li>
								<li><a href="#">Next</a></li>
							</ul>
						</div>
					</div>
                        <div class="span3">
                       
                        <div class="widget">
                <h2 class="widget-title"><span>Site Categories</span></h2>
                <div class="sidebar-line"><span></span></div>
                    <ul class="bullet_arrow2 categories">
						<%@category.each do |i|%>
                       
                        <li><%=link_to i["product_category_name"], :controller =>  "c_shop10", :action => "view_all", :id => @profile,:filter => "search", :method => :post, :c_id => i['product_category_id'] %> 
                            <ul>
								<%@subcategory=Masterusers.find_by_sql("select * from product_sub_category_#{session[:master_user_id]} where product_category_id=#{i['product_category_id']}")%>				
									<%@subcategory.each do |i|%>
										<li><%=link_to i["sub_category_name"], :controller =>  "c_shop10", :action => "view_all", :filter => "subcategory", :s_id => i["sub_category_id"] %></li>
									<%end%>
                            </ul>
                        </li>
                        
						<%end%>
                    </ul>
                    </div>
                         
                    </div>
					
				</div></div>
			</section>
								<section id="copyright">
								<span>Powered by <a href="http://www.startashoppe.com">StartAShoppe</a></span>
							</section>
							</div>
                        
							
						</div>
					</section>
		<script src="/theme10/themes/js/common.js"></script>	
    </body>
</html>
