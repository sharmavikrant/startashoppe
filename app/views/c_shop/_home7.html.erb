<body>

<header class="header" style="margin-top:-40px">



<div id="top-bar" class="container">

			<div class="row">

				<div class="span4">

					 <div id="demo-header" style= "width: 125px;height: 65px;float: left;padding-left: 60px;padding-bottom: 20px;position: relative;z-index: 999;font-family: sans-serif;text-transform: uppercase;margin-right: 36px;">

				

				   <h2 style="color: #000000;"><a href="/c_shop/home" class="logo pull-left"><%=session[:shop_name]%></a></h2>

					   </div>

				</div>

				<div class="span8">

					<div class="account pull-right">

						<ul class="user-menu">				

							<li>

							<%=link_to "Your Cart", :controller =>  "c_shop7", :action => "add_to_cart", :id => @profile,:name => "show_cart", :method => :post %>

							</li>

							<li><a href="#">Login</a></li>		

						</ul>

					</div>

				</div>

			</div>

		</div>

		<div id="wrapper" class="container">

			<section class="navbar main-menu">

<div class="navbar-inner main-menu">				



					<nav id="menu" class="pull-right">

						<ul>

							<li><a href="/c_shop7/view_all">All Products</a></li>

							<%@category=Masterusers.find_by_sql("select * from product_category_"+session[:master_user_id].to_s)%>				

							<%@category.each do |i|%>

							<li><%=link_to i["product_category_name"], :controller =>  "c_shop7", :action => "view_all", :id => @profile,:name => "search", :method => :post, :category_id => i['product_category_id'] %>					

								

							</li>

							<%end%>

								<li><a href="/c_shop7/contact">Contact Us</a></li>				

							

							

						</ul>

					</nav>

				</div>

			</section>



</header>

