<div class="tab-pane" id="tab2">
				  
			<% @user_details.each do |a|%>	
				<div class="span10" style="margin-left: 8%;">
					<div class="span3">
                                <label class="control-label"  for="name">Full Name</label>
								<%= text_field_tag(:name,"",:value=>a['name']) %>
                    </div>
					
					<div class="span3">					
                           
                                <label class="control-label"  for="name">Address</label>
                                <TEXTAREA NAME="address" COLS=40 ROWS=3 ><%=a['address']%></TEXTAREA>
                    </div>
					<div class="span3">
                                <label class="control-label" for="name">Pin Code</label>
                                <%= text_field_tag(:pincode,"",:value=>a['pincode']) %>
                    </div>
				</div>
				<div class="span10" style="margin-left: 8%;">
					<div class="span3">
							<label class="control-label"  for="country">State</label>
                                <%= text_field_tag(:state,"",:value=>a['state']) %>
                    </div>
					<div class="span3">					
                                <label class="control-label"  for="country">City</label>
                                <%= text_field_tag(:city,"",:value=>a['city']) %>
                    </div>
					<div class="span3">
                                <label class="control-label"  for="country">Land Mark</label>
                                <%= text_field_tag(:landmark,"",:value=>a['landmark']) %>
                    </div>
				</div>
				<div class="span10" style="margin-left: 8%;">
					<div class="span3">
                                <label class="control-label" for="country">Country</label>
                                <%= text_field_tag(:country,"",:value=>a['country']) %>
                    </div>
					<div class="span3">					
                                <label class="control-label" for="phone">Phone</label>
                                <%= text_field_tag(:phone,"",:value=>a['phone']) %>
                    </div>
				</div>
              <%end%>    	
	</div>