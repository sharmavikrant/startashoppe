<% if @ajaxsearch == "sucessfull" %>
	$('#category_table').html('<%= escape_javascript(render("add_category_category_table")) %>');
	$('#category_id').find('option').remove().end().append('<option >Select a category</option>');
	<%@category.each do |a|%>
	$("#category_id").append("<option value=<%=a['product_category_id']%>><%=a['product_category_name']%></option>");
	<%end%>
	<% unless @flash.nil? %>
	$("#notice").html('<div class="heading_featured" ><fieldset style="height: 35px; background-color: #FF0040;color: #FFFFFF;padding-top:10px"><div align="center"><font size="5"><p class="flash-msg"> <%= @flash %> </p></font></div></fieldset></div>');  
	<%end%>
<%end%>
<% if @ajaxsearch == "error" %>
	<% unless @flash.nil? %>
	$("#notice").html('<div class="heading_featured" ><fieldset style="height: 35px; background-color: #FF0040;color: #FFFFFF;padding-top:10px"><div align="center"><font size="5"><p class="flash-msg"> <%= @flash %> </p></font></div></fieldset></div>'); 
	
	<%end%>
<%end%>